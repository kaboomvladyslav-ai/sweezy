# App
APP_NAME=SWEEEZY Backend
APP_ENV=development
APP_VERSION=1.0.0

# Database (PostgreSQL)
DATABASE_URL=postgresql+psycopg2://postgres:postgres@localhost:5432/sweeezy

# CORS
CORS_ORIGINS=["*"]

# Security
JWT_SECRET_KEY=please-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Demo admin (for JWT issuance)
ADMIN_EMAIL=admin@sweeezy.app
ADMIN_PASSWORD=admin123

# Sentry
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.0

# RemoteConfig flags
REMOTE_FLAGS={"enableNewOnboarding": true}
